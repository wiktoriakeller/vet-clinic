@model IEnumerable<VetClinicWeb.Models.FacilityViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Welcome</h3>
    <h3>To the Vet Clinic 😺</h3>
</div>

<form asp-action="Index" method="get">
    <div class="container-md mt-3 mb-3" style="width:250px;">
        <div class="input-group-append">
            <input type="text" name="year" placeholder="Type year..." class="form-control"/>
            <input type="submit" value="Select" class="btn btn-primary"/>
        </div>
        <p class="text-danger">@ViewBag.error</p>
    </div>
</form>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Income for @ViewBag.Year
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Income)
            </td>
        </tr>
}
    </tbody>
</table>
