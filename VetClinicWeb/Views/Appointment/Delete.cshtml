@model VetClinicWeb.Models.AppointmentViewModel

@{
    ViewData["Title"] = "Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Are you sure you want to delete this?</h5>
<br />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacilityAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfficeNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cause)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cause)
        </dd>
    </dl>

    <p class="text-danger">@ViewBag.ErrorMessage</p>
    
    <form method="post" asp-controller="Appointment" asp-action="Delete" asp-route-id="@Model.AppointmentId">
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
    <br />
</div>

<div>
    <a asp-controller="Appointment" asp-action="Details" asp-route-id=@Model.AppointmentId>Back to details</a>
</div>
