@model VetClinicWeb.Models.PositionViewModel

@{
    ViewData["Title"] = "Position";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create new position</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryMin" class="control-label"></label>
                <input asp-for="SalaryMin" class="form-control" />
                <span asp-validation-for="SalaryMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryMax" class="control-label"></label>
                <input asp-for="SalaryMax" class="form-control" />
                <span asp-validation-for="SalaryMax" class="text-danger"></span>
            </div>
            <p class="text-danger">@ViewBag.ErrorMessage</p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
