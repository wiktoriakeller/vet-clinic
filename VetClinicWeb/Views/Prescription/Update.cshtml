@model VetClinicWeb.Models.PrescriptionViewModel

@{
    ViewData["Title"] = "Prescription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Update prescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.PrescriptionId)
            @Html.HiddenFor(model => model.AppointmentId)
            <div class="form-group">
                <label asp-for="DrugName" class="control-label"></label>
                @Html.DropDownListFor(model => model.DrugId, ViewBag.drugs as SelectList, "-- drug --", new {@class="form-control" })
                <p class="text-danger">@TempData["ErrorDropdown"]</p>
            </div>
            <div class="form-group">
                <label asp-for="Dosage" class="control-label"></label>
                <input asp-for="Dosage" class="form-control" />
                <p class="text-danger">@TempData["Error"]</p>
            </div>
            <p class="text-danger">@ViewBag.ErrorMessage</p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back", "Index", "Prescription", new { appointmentId=Model.AppointmentId})
</div>
