@model IEnumerable<VetClinicWeb.Models.PatientViewModel>

@{
    ViewData["Title"] = "Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>List of patients</h4>

@Html.Partial("SearchBoxPartialView")

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class = "table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeciesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeciesName)
            </td>
            @if(item.OwnerName != null)
            {
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td> 
            }
            else {
            <td>
                None
            </td>
            }
            @if(item.OrganizationName != null)
            {
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td> 
            }
            else {
            <td>
                None
            </td>
            }
            <td width="20%">
                @Html.ActionLink("Update", "Update", new { id=item.PatientId }) |
                @Html.ActionLink("Delete", "ShowDelete", new { id=item.PatientId })
            </td>
        </tr>
}
    </tbody>
</table>
