@model VetClinicWeb.Models.PatientViewModel

@{
    ViewData["Title"] = "Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Are you sure you want to delete this?</h5>
<br />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpeciesName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpeciesName)
        </dd>
        @if(Model.Organization != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.OrganizationNIP)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.OrganizationNIP)
            </dd>
        }
        else
        {
           <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.OwnerPESEL)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.OwnerPESEL)
           </dd>
        }
    </dl>
    
    <form method="post" asp-controller="Patient" asp-action="Delete" asp-route-id="@Model.PatientId">
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
    <br />
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
