@model IEnumerable<VetClinicWeb.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>List of services</h4>

@Html.Partial("SearchBoxPartialView")

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @if(item.ServiceType == 'E')
            {
                <td>
                    Examination
                </td>
            }
            else
            {
                <td>
                    Treatment
                </td>
            }
            <td width="20%">
                @Html.ActionLink("Update", "Update", new { id=item.ServiceId }) |
                @Html.ActionLink("Details", "Details", new { id=item.ServiceId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ServiceId })
            </td>
        </tr>
}
    </tbody>
</table>
